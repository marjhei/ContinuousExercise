@model Continuousexercise.Models.Topic

@{
    ViewData["Title"] = "LisaaAihe";
}

<h1>Lisää Aihe:</h1>

@using (Html.BeginForm("Lisaa", "Home", FormMethod.Post))
{
 
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="LisaaAihe">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimeToMaster" class="control-label"></label>
                    <input asp-for="TimeToMaster" class="form-control" />
                    <span asp-validation-for="TimeToMaster" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimeSpent" class="control-label"></label>
                    <input asp-for="TimeSpent" class="form-control" />
                    <span asp-validation-for="TimeSpent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Source" class="control-label"></label>
                    <input asp-for="Source" class="form-control" />
                    <span asp-validation-for="Source" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartLearningDate" class="control-label"></label>
                    <input asp-for="StartLearningDate" class="form-control" />
                    <span asp-validation-for="StartLearningDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompletionDate" class="control-label"></label>
                    <input asp-for="CompletionDate" class="form-control" />
                    <span asp-validation-for="CompletionDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InProgress" class="control-label"></label><br />
                    @Html.RadioButtonFor(m => m.InProgress, true) Kyllä
                    @Html.RadioButtonFor(m => m.InProgress, false) Ei
                    <span asp-validation-for="InProgress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lisää" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Aiheet">Takaisin aiheisiin</a>
    </div>

}

